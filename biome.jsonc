{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded"
    }
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "rules": {
      "recommended": true
    }
  },
  "files": {
    "ignore": ["dist", "./package.json"]
  }
}
